definition {

	macro addRun {
		LexiconEntry.gotoAdd();

		Select(
			key_fieldLabel = ${categoryField},
			locator1 = "Select#GENERIC_SELECT_FIELD",
			value1 = ${listOption});

		if (isSet(categoryField2)) {
			Select(
				key_fieldLabel = ${categoryField2},
				locator1 = "Select#GENERIC_SELECT_FIELD",
				value1 = ${listOption2});
		}

		Button.click(button = "Save");

		Alert.viewSuccessMessage();
	}

	macro editRun {
		WaitForElementNotPresent(locator1 = "Message#SUCCESS_DISMISSIBLE");

		TestrayManage.selectTableRowOption(
			rowOption = "Select Environment Factors",
			tableEntry = ${tableEntry});

		Select(
			key_fieldLabel = ${categoryField},
			locator1 = "Select#GENERIC_SELECT_FIELD",
			value1 = ${listOption});

		if (isSet(categoryField2)) {
			Select(
				key_fieldLabel = ${categoryField2},
				locator1 = "Select#GENERIC_SELECT_FIELD",
				value1 = ${listOption2});
		}

		Button.click(button = "Save");

		Alert.viewSuccessMessage();
	}

}